<h1>Create new question for test "<%= Test.select(:title).where(id: params[:test_id]).pluck(:title)[0] %>"</h1>

<form action="<%= test_questions_path %>" method="post">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

  <p>
    <label for="question-body">Body:</label>
    <input type="text" name="question[body]" id="question-body">
  </p><br>

  <input type="hidden" name="question[test_id]" id="question-test_id" value="<%= params[:test_id] %>">

  <input type="submit" value="Create">
</form>
