<h1><%= t('.header') %></h1>
<h2> <%= "#{t('.title')} #{@test.title}" %></h2>
<p><b><%= t('.timer') %></b> <%= @test.timer %></p>
<p><b><%= t('.level') %></b> <%= @test.level %></p>
<p><b><%= t('.category') %></b> <%= @test.category.title %></p>
<p><b><%= t('.author') %></b> <%= @test.author.email %></p>
<br>
<%= link_to t('.edit_test'), edit_admin_test_path(@test) %>
<br>
<hr align="left" width="600" size="4" color="#ff9900" />
<br>
<table border="1">
  <tr align="center">
    <td><%= t('.question') %></td>
    <td colspan="3"><%= t('.action') %></td>
  </tr>
  <%= render partial: 'admin/questions/question', collection: @test.questions %>
</table>

<br>
<br>
<%= link_to t('.add_question'), new_admin_test_question_path(@test) %>

<br>
<br>

<%= link_to t('.back'), admin_tests_path %>
